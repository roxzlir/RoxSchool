@model IEnumerable<RoxSchool.Models.StudentClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentClassName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentClassName)
            </td>
                <td class="btn-group btn-group-sm">
                    <a asp-action="Edit" asp-route-id="@item.StudentClassId" class="btn btn-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.StudentClassId" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentClassId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
